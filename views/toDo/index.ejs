<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <a href='/toDo/add' class='btn btn-primary btn-block'>New Item</a>
            <br />
             <table class='table table-hover table-striped table-bordered'>
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Due Date</th>
                    <th>Mark as Completed</th>
                </tr>
                <% for(let i=0; i < toDos.length; i++) { %>
                    <tr  class="<%= toDos[i].DueDate < new Date() ? 'table-danger' : '' %>"      >
                        <td><%= toDos[i].Title %></td>
                        <td><%= toDos[i].Name %></td>
                        <td><%= toDos[i].DueDate.toDateString() %></td>
                        <td>
                            <form method="post" action="/toDo/markascompleted">
                                <input name="id" value="<%= toDos[i].Id %>" type="hidden" />
                                <button class="btn btn-primary">Mark as Completed</button>
                            </form>
                        </td>
                    </tr>
                <%}%>
            </table>
        </div>
    </div>
</div>